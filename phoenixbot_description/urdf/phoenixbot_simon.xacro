<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="phoenixbot_simon">
    <link name="simon_arm">
        <visual>
            <origin rpy="0 0 0"/>
            <geometry>
              <mesh filename="package://phoenixbot_description/meshes/2019/simon_arm.dae" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <xacro:trivial_inertia/>
    </link>

    <link name="left_paddle">
        <visual>
            <origin rpy="0 0 0"/>
            <geometry>
              <mesh filename="package://phoenixbot_description/meshes/2019/left_paddle.dae" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <xacro:trivial_inertia/>
    </link>

    <link name="right_paddle">
        <visual>
            <origin rpy="0 0 0"/>
            <geometry>
              <mesh filename="package://phoenixbot_description/meshes/2019/right_paddle.dae" scale="0.01 0.01 0.01"/>
            </geometry>
        </visual>
        <xacro:trivial_inertia/>
    </link>

    <joint name="left_paddle_joint" type="revolute">
        <axis xyz="0 1 0"/>
        <origin xyz="-0.3047 0.14 0.0539" rpy="0 0 0"/>
        <parent link="simon_arm"/>
        <child link="left_paddle"/>
        <limit lower="${-45 * DEG}" upper="${45 * DEG}" effort="20.0" velocity="${pi/2}"/>
    </joint>

    <joint name="right_paddle_joint" type="revolute">
        <axis xyz="0 1 0"/>
        <origin xyz="-0.3047 -0.14 0.0539" rpy="0 0 0"/>
        <parent link="simon_arm"/>
        <child link="right_paddle"/>
        <limit lower="${-45 * DEG}" upper="${45 * DEG}" effort="20.0" velocity="${pi/2}"/>
    </joint>

    <joint name="simon_arm_joint" type="revolute">
        <axis xyz="0 1 0"/>
        <origin xyz="-0.3105 0 0.1073" rpy="0 ${pi/2} 0"/>
        <parent link="chassis"/>
        <child link="simon_arm"/>
        <limit lower="${-pi / 2}" upper="${33 * DEG}" effort="20.0" velocity="${pi/2}"/>
    </joint>

    <transmission name="simon_arm_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="simon_arm_joint">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        </joint>
        <actuator name="simon_motor">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>
    <transmission name="left_paddle_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="left_paddle_joint">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        </joint>
        <actuator name="left_paddle_servo">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>
    <transmission name="right_paddle_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="right_paddle_joint">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
        </joint>
        <actuator name="right_paddle_servo">
            <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>
</robot>

