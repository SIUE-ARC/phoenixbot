<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="phoenixbot_chassis">
    <xacro:macro name="wheel" params="name pos">
        <link name="${name}">
            <visual>
                <origin rpy="0 0 ${pi/2}"/>
                <geometry>
		    <mesh filename = "package://phoenixbot_description/meshes/${pos}.stl" scale="0.01 0.01 0.01"/>
                    <!--<cylinder length="${1 * IN}" radius="${2 * IN}"/>-->
                </geometry>
            </visual>

            <collision>
                <origin rpy="${pi/2} 0 0"/>
                <geometry>
                    <cylinder length="${1 * IN}" radius="${2 * IN}"/>
                </geometry>
            </collision>

            <xacro:cylinder_inertia mass="${0.31 * LBS}" radius="${2 * IN}" thickness="${1 * IN}"/>
        </link>
	</xacro:macro>

    <link name="base_link"/>
    <link name="base_footprint"/>

    <joint name = "base_link_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 ${1 * IN}"/>
    </joint>

    <joint name = "base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
	    <origin rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
		<mesh filename = "package://phoenixbot_description/meshes/phoenixbotbody.stl" scale="0.01 0.01 0.01"/>
                <!--<box size="${28.31 * IN} ${27.50 * IN} ${3.33 * IN}"/>-->
            </geometry>
        </visual>

        <collision>
            <geometry>
                <box size="${28.31 * IN} ${27.50 * IN} ${3.33 * IN}"/>
            </geometry>
        </collision>

        <inertial>pi
            <mass value="${15 * LBS}"/>
            <inertia ixx="${1/12*15*LBS*((3.33*IN)**2+(28.31*IN)**2)}"
                iyy="${1/12*15*LBS*((27.50*IN)**2+(28.31*IN)**2)}"
                izz="${1/12*15*LBS*((27.50*IN)**2+(3.33*IN)**2)}"
            ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Left wheels -->
    <xacro:wheel name="left_wheel" pos="middle_center"/>
    <xacro:wheel name="left_fwheel" pos="outerWheel_center"/>
    <xacro:wheel name="left_rwheel" pos="outerWheel_center"/>

    <joint name="left_wheel_joint" type="continuous">
        <axis xyz="0 1 0"/>
        <origin xyz="0 ${11.4 * IN} -${0.5 * IN}"/> <!-- 0 ${12.82 *IN} 0 -->
        <parent link="base_link"/>
        <child link="left_wheel"/>
    </joint>

    <joint name="left_fwheel_joint" type="continuous">
        <axis xyz="0 1 0"/>
        <origin xyz="${10.73 * IN} ${12.82 * IN} ${0.25 * IN}"/>
        <parent link="base_link"/>
        <child link="left_fwheel"/>
        <mimic joint="left_wheel_joint"/>
    </joint>

    <joint name="left_rwheel_joint" type="continuous">
        <axis xyz="0 1 0"/>
        <origin xyz="${-10.73 * IN} ${12.82 * IN} ${0.25 * IN}"/>
        <parent link="base_link"/>
        <child link="left_rwheel"/>
        <mimic joint="left_wheel_joint"/>
    </joint>

    <transmission name="left_wheel_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="left_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="left_motor">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <!-- Right wheels -->
    <xacro:wheel name="right_wheel" pos="middle_center"/>
    <xacro:wheel name="right_fwheel" pos="outerWheel_center"/>
    <xacro:wheel name="right_rwheel" pos="outerWheel_center"/>

    <joint name="right_wheel_joint" type="continuous">
        <axis xyz="0 1 0"/>
        <origin xyz="0 ${-12.82 * IN} 0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
    </joint>

    <joint name="right_fwheel_joint" type="continuous">
        <axis xyz="0 1 0"/>
        <origin xyz="${10.73 * IN} ${-12.82 * IN} ${0.25 * IN}"/>
        <parent link="base_link"/>
        <child link="right_fwheel"/>
        <mimic joint="right_wheel_joint"/>
    </joint>

    <joint name="right_rwheel_joint" type="continuous">
        <axis xyz="0 1 0"/>
        <origin xyz="${-10.73 * IN} ${-12.82 * IN} ${0.25 * IN}"/>
        <parent link="base_link"/>
        <child link="right_rwheel"/>
        <mimic joint="right_wheel_joint"/>
    </joint>

    <transmission name="right_wheel_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="right_wheel_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="right_motor">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
		</actuator>
	</transmission>

</robot>

